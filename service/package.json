{
  "name": "auth",
  "version": "0.0.1",
  "description": "A token management service. It is responsible for creating, refreshing and destroying authentication tokens. Expirable/refreshable tokens are generated using JTW and can be passed onto the client.",
  "main": "./lib/index.js",
  "dependencies": {
    "minimist": "^1.1.3",
    "express": "^4.13.3",
    "body-parser": "^1.13.3",
    "winston": "^1.0.1",
    "winston-express-middleware": "^0.1.0",
    "winston-logstash": "^0.2.11"
  },
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^12.0.2",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react": "^4.3.0",
    "jest-cli": "^12.0.2",
    "nodemon": "^1.9.1",
    "supertest": "^1.2.0"
  },
  "scripts": {
    "start": "node .",
    "build": "./node_modules/babel-cli/bin/babel.js src --out-dir lib",
    "lint": "./node_modules/eslint/bin/eslint.js src/* test/* integration-test/test/*",
    "test": "npm run lint && npm run test:jest && npm run test:integration",
    "test:jest": "./node_modules/jest-cli/bin/jest.js",
    "test:watch": "./node_modules/nodemon/bin/nodemon.js -w src -w test -e js -x 'npm run lint && jest'",
    "test:integration": "cd integration-test && bash test.sh && cd .."
  },
  "repository": {
    "type": "git",
    "url": "https://docker.com/hharnisc"
  },
  "keywords": ["auth,jwt,service,kubernetes,localkube"],
  "author": {
    "name": "Harrison Harnisch",
    "email": "hharnisc@gmail.com",
    "url": "http://hharnisc.github.io"
  },
  "homepage": "https://docker.com/hharnisc",
  "jest": {
    "testDirectoryName": "test",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/integration-test/"
    ]
  }
}
